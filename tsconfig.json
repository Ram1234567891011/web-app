{
  "compilerOptions": {
    /* Output */
    "target": "ESNext",                   // Modern JS output
    "module": "CommonJS",                 // Para gumana sa Node
    "rootDir": "src",                     // TS source files
    "outDir": "dist",                     // Compiled JS output

    /* Node + Vite setup */
    "esModuleInterop": true,              // Para pwede ka mag `import express from "express"`
    "moduleResolution": "node",           // Gamitin node-style imports
    "resolveJsonModule": true,            // Para makapag-import ng JSON
    "skipLibCheck": true,                 // Skip type-check sa node_modules
    "forceConsistentCasingInFileNames": true,

    /* Type Safety */
    "strict": true,                       // Enable strict checking

    /* Debugging */
    "sourceMap": true                     // Gumawa ng .map files para sa debugging
  },
  "include": ["src"],                     // Folder kung saan andoon ang .ts files
  "exclude": ["node_modules", "dist"]     // Huwag isama sa compile
}
